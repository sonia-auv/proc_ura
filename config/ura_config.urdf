<robot name="URA">

    <link name="base_link">
        <visual name="base_viz">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.03" />
            </geometry>
            <material name="Gray">
                <color rgba="0 0 0 0.3"/>
            </material>
        </visual>
    </link>

    <link name="base_plate">
        <visual name="base_plate_viz">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.075" length="0.01" />
            </geometry>
            <material name="Gray">
                <color rgba="0 0 0 0.3"/>
            </material>
        </visual>
    </link>

    <link name="bottom_arm">
        <visual name="bottom_arm_viz">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.20 0.002 0.045" />
            </geometry>
            <material name="Gray">
                <color rgba="0 0 0 0.3"/>
            </material>
        </visual>
    </link>

    <link name="top_arm">
        <visual name="top_arm_viz">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.20 0.002 0.045" />
            </geometry>
            <material name="Gray">
                <color rgba="0 0 0 0.3"/>
            </material>
        </visual>
    </link>

    <link name="tool">
        <visual name="top_arm_viz">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.1 0.05 0.05" />
            </geometry>
            <material name="Gray">
                <color rgba="0 0 0 0"/>
            </material>
        </visual>
    </link>

    <joint name="base_rotation" type="planar">
        <parent link="base_link"/>
        <child link="base_plate"/>
        <origin xyz="0 0 0.01" rpy="0 0 0" />
        <axis xyz="0 0 1"/>
        <limit upper="1" lower="0" effort="10" velocity="10"/>
        <dynamics damping="0.0" friction="0.0"/>
    </joint>

    <joint name="bottom_rotation" type="planar">
        <parent link="base_plate"/>
        <child link="bottom_arm"/>
        <origin xyz="0.16 0 0.045" rpy="0 0 0" />
        <axis xyz="0 1 0"/>
        <limit upper="1" lower="0" effort="10" velocity="10"/>
        <dynamics damping="0.0" friction="0.0"/>
    </joint>

    <joint name="top_rotation" type="planar">
        <parent link="bottom_arm"/>
        <child link="top_arm"/>
        <origin xyz="0.2 0 0" rpy="0 0 0" />
        <axis xyz="1 0 0"/>
        <limit upper="1" lower="0" effort="10" velocity="10"/>
        <dynamics damping="0.0" friction="0.0"/>
    </joint>

    <joint name="tool_rotation" type="planar">
        <parent link="top_arm"/>
        <child link="tool"/>
        <origin xyz="0.125 0 0" rpy="0 0 1.570796" />
        <axis xyz="0 0 1"/>
        <limit upper="1" lower="0" effort="10" velocity="10"/>
        <dynamics damping="0.0" friction="0.0"/>
    </joint>

</robot>
